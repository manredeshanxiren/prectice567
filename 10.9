#include<stdio.h>
int my__search(int k)
{
	int left = 0, right = 8;
	int arr[9] = { 1,2,3,4,5,6,7,8,9 };
	while (left <= right)
	{
	    int mid = (left + right) / 2;
		if ( arr [mid] < k)
		{
			left += 1;
		}
		else if (arr[mid] > k)
		{
			right -= 1;
		}
		else
			return mid;
	}
	return -1;
}
int main()
{
	int arr[9] = { 1,2,3,4,5,6,7,8,9 };
	int k, x;
	printf_s("请输入一个整数（1~9）");
	scanf_s("%d", &k);
	x = my__search(k);
	if (x)
		printf("找到了，该数的序号是：%d", x);
	else
		printf("没找到:(");
	return 0;
}
